{
  "threshold": 0,
  "reporters": ["html", "console", "json"],
  "ignore": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/coverage/**",
    "**/*.min.js",
    "**/*.min.css",
    "**/package-lock.json",
    "**/yarn.lock",
    "**/docs/**",
    "**/playwright-visual-report/**"
  ],
  "gitignore": true,
  "minLines": 5,
  "minTokens": 50,
  "maxLines": 1000,
  "maxSize": "100kb",
  "format": ["javascript", "css"],
  "absolute": false,
  "output": "./reports/jscpd"
}
